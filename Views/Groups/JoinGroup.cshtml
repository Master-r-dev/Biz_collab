@model Biz_collab.Models.Group
@{
    ViewData["Title"] = "JoinGroup";
}

<h1>JoinGroup- кем будете?</h1>
<div class="form-group">
    <label for="1" class="control-label">
        <input type="radio" id="1" onclick="JoinGroup()" value="1" for="sum" />
        Донатером(Не можете ставить на голосование ,но можете голосовать и пополнять счет группы)
        Требуется @Model.EntryFeeDon у.е
    </label>
    @if (Model.Type==2) {
        if (ViewBag.PersBudget>=Model.EntryFeeUser) {
    <label for="2" class="control-label">
        <input type="radio" id="2" onclick="JoinGroup()" value="2" for="sum" />
        Участник(можете ставить на голосование и пополнять счет)
        Требуется @Model.EntryFeeUser у.е
    </label>
        }
        if (ViewBag.PersBudget >= Model.EntryFeeVIP) {
    <label for="3" class="control-label">
        <input type="radio" id="3" onclick="JoinGroup()" value="3" for="sum" />
        VIP(можете ставить на голосование и пополнять счет).Голос равен 1/4 сумме участников
        Требуется @Model.EntryFeeVIP у.е
    </label>
        }
        if (ViewBag.PersBudget >= Model.EntryFeeMod) {
    <label for="4" class="control-label">
        <input type="radio" id="4" onclick="JoinGroup()" value="4" for="sum" />
        Модератор(можете ставить на голосование и пополнять счет).Голос равен 1/2 сумме участников
        Требуется @Model.EntryFeeMod у.е
    </label>
        }
    }
</div>
<div class="form-group">
    <input type="submit" value="Join" class="btn btn-primary" />
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Вернуться на главную</a>
</div>