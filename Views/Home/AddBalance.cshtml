@{ ViewBag.Amount = Convert.ToInt32(ViewBag.PersBudget); }
<div class="modal-content mdl">
    <div class="modal-header">
        <h3>Пополнить баланс</h3>
        <button class="close" data-dismiss="modal" area-hidden="true"><i class="fas fa-times-circle"></i></button>
    </div>
    <div class="modal-body">
        <div class="col-xs-4">
            <form asp-action="AddBalance">
                <div class="form-group">
                    <dl class="row" style="margin-left: 5px">Мой баланс: @ViewBag.Amount</dl>
                    <div class="form-group" method="post">
                        <input type="number" oninput="this.value = !!this.value && Math.abs(this.value) >= 0 && Math.abs(this.value) <= 1000000 - @ViewBag.Amount ? Math.abs(this.value) : null " name="Add" class="form-control" /> <p>(Максимальный баланс на пользователя=1000000)</p>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Пополнить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>