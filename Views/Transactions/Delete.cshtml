@model Biz_collab.Models.Transaction

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить транзакцию</h1>

<h3>Вы уверены что хотите удалить транзакцию? Голоса пропадут</h3>
<div>
    <h4>Транзакция</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Cумма
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            Вид транзакции
        </dt>
        @if (Model.OperationType == 1)
        {
            <dd class="col-sm-10">
                Потратить из группового бюджета
            </dd>
        }
        else if (Model.OperationType == 2)
        {
            <dd class="col-sm-10">
                Перевести на свой счет
            </dd>
        }
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Explanation)
        </dd>
        <dt class="col-sm-2">
            Статус:
        </dt>
        <dd class="col-sm-10">
            Ожидание
        </dd>
        <dt class="col-sm-2">
            Процент За
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YesPercent)
        </dd>
        <dt class="col-sm-2">
            Процент Против
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NoPercent)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Groups" asp-action="OpenGroup" asp-route-name="@ViewBag.Name">Вернуться в группу</a>
    </form>
</div>
